<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio_NET_MAUI.Pages.AreaRectanguloPage"
             Title="Área del Rectángulo">
    <StackLayout Padding="20">
        <Label Text="Base:" />
        <Entry x:Name="baseEntry" Keyboard="Numeric" />
        <Label Text="Altura:" />
        <Entry x:Name="alturaEntry" Keyboard="Numeric" />
        <Button Text="Calcular Área" Clicked="OnCalcularAreaClicked" />
        <Label x:Name="resultadoLabel" Text="" />
        <Button Text="Limpiar Campos" Clicked="OnLimpiarClicked" />
    </StackLayout>
</ContentPage>
